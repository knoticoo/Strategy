# AI Bot Service Configuration
NODE_ENV=development
PORT=3001

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# AI Configuration
AI_PROVIDER=fallback
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=800
TEMPERATURE=0.7

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=./data/vet-bot.db
MONGODB_URI=mongodb://localhost:27017/vet-bot
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
WIKIPEDIA_API_BASE=https://en.wikipedia.org/api/rest_v1
LIBRE_TRANSLATE_URL=https://libretranslate.de
PETMD_BASE_URL=https://www.petmd.com
VETLABEL_BASE_URL=https://vetlabel.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/vet-bot.log

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Web Scraping
USER_AGENT=AI-Vet-Bot/1.0 (Educational Use)
SCRAPING_DELAY_MS=1000
MAX_CONCURRENT_REQUESTS=5

# Cache Configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=1000