# AI Veterinary Bot Service Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (for development)
OPENAI_API_KEY=sk-demo-key-for-development
ADMIN_API_KEY=admin-key-123

# Database Configuration
DATABASE_URL=sqlite://./data/bot-service.db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=900

# Logging
LOG_LEVEL=info
LOG_FILE=logs/bot-service.log

# AI Provider Configuration
AI_PROVIDER=local
AI_MODEL_PATH=./ai-training/models

# Training Configuration
TRAINING_ENABLED=true
TRAINING_DATA_PATH=./ai-training/data